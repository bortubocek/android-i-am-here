<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10sp">
		<TextView android:id="@+id/header_text"
				android:text="Compose message "
				android:textStyle="bold"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5sp"/>
		<TextView android:id="@+id/counter_text"
				android:text="0"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="right"
				android:layout_marginRight="10sp"/>
	</LinearLayout>
	<EditText android:id="@+id/message_editor"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:minLines="2"
			android:layout_marginTop="10sp"/>
	<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="2sp"
			android:layout_marginLeft="2sp">
		<Button android:id="@+id/send_button"
				android:text="Send with current location"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		<CheckBox android:id="@+id/self_checkbox"
				android:text=" to self"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
	</LinearLayout>
	<Button android:id="@+id/get_location_button"
			android:text="Add location manually"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="5sp"
			android:layout_marginLeft="2sp"/>
</LinearLayout>